}
function check4(){
  var exit = false;
  var results = [60, 300, 50];
  var targets = document.getElementsByClassName("check4");
  for(var i = 0; i < targets.length; i++){
    if(results[i] == targets[i].value){
      targets[i].style.borderColor = "green";
      targets[i].disabled = true;
    } else {
      exit = true;
      targets[i].style.borderColor = "red";
