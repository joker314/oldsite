  <script>
    function check1(){
  var exit = false;
  var results = [6, 5, 1];
  var targets = document.getElementsByClassName("check1");
  for(var i = 0; i < targets.length; i++){
    if(results[i] == targets[i].value){
      targets[i].style.borderColor = "green";
      targets[i].disabled = true;
    } else {
      exit = true;
      targets[i].style.borderColor = "red";
    }
  }
  if(!exit){
    document.getElementsByClassName("unlock1")[0].style.display = "block";
  }
}
function check2(){
  var exit = false;
  var results = [60, 1, 6];
  var targets = document.getElementsByClassName("check2");
  for(var i = 0; i < targets.length; i++){
    if(results[i] == targets[i].value){
      targets[i].style.borderColor = "green";
      targets[i].disabled = true;
    } else {
      exit = true;
      targets[i].style.borderColor = "red";
    }
  }
  if(!exit){
    document.getElementsByClassName("unlock2")[0].style.display = "block";
  }
}
function check3(){
  var exit = false;
  var results = [5, 6];
  var targets = document.getElementsByClassName("check3");
  for(var i = 0; i < targets.length; i++){
    if(results[i] == targets[i].value){
      targets[i].style.borderColor = "green";
      targets[i].disabled = true;
    } else {
      exit = true;
      targets[i].style.borderColor = "red";
